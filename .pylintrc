[MASTER]
ignore=
    migrations,
    __pycache__,
    venv,
    env,
    .venv,
    .env

init-hook="import sys; sys.path.append('.')"

ignore-paths=
    ^tests/ui/.*,
    ^tests/api/.*

[MESSAGES CONTROL]
disable=
    cyclic-import,
    too-few-public-methods

[FORMAT]
max-line-length=100

[DESIGN]
max-args=10

[TYPECHECK]
ignore-mixin-members=yes

[REPORTS]
output-format=colorized
